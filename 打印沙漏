#include <iostream>
#include <algorithm>
#include <string.h>
#include <math.h>
#include <vector>
using namespace std;

vector<char> v;
const int INF=0x3f3f3f ;

int main(){
    int n;
    char a;
    while(cin >> n >> a){
        int i=1,sum=1;
        while(sum<=n){
            sum=sum+(2*(i+1)-1)*2;
            if(sum<=n) i++;
        }
        //cout << i << endl;
        int ans=0;
        int kong=0;
        for(int j=i;j>=1;j--){
            int temp=2*j-1;
            ans+=temp;
            for(int p=0;p<kong;p++) cout << " ";
            for(int m=1;m<=temp;m++) cout << a;
                cout << endl;
            kong++;
        }
        kong--;
        for(int j=2;j<=i;j++){
            int temp=2*j-1;
            kong--;
            ans+=temp;
            for(int p=0;p<kong;p++) cout << " ";
            for(int m=1;m<=temp;m++) cout << a;
                cout << endl;
        }
        cout << n-ans  << endl;
    }
    return 0;
}
